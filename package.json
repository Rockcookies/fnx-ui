{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepare": "yarn build:cli",
    "bootstrap": "lerna bootstrap",
    "build:clean": "lerna run clean",
    "build:cli": "lerna exec --scope @fnx-ui/cli yarn build",
    "clean": "lerna clean -y",
    "publish": "lerna publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rockcookies/fnx-ui.git"
  },
  "devDependencies": {
    "eslint": "^7.32.0",
    "lerna": "^4.0.0",
    "lerna-changelog": "^2.1.0",
    "lint-staged": "^11.1.2",
    "prettier": "^2.4.1",
    "yorkie": "^2.0.0"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{ts,tsx,js,less}": "prettier --write",
    "*.{ts,tsx}": "eslint --fix"
  }
}
