{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": true,
    "allowJs": false
  },
  "exclude": [
    "node_modules",
    "lib",
    "es",
    "dist",
    "site",
    "**/__test__",
    "**/demos",
    "test"
  ]
}
