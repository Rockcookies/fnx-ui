{
  "compilerOptions": {
    "outDir": "./lib",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "lib": ["esnext", "dom"],
    "declaration": true,
    "inlineSourceMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowJs": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
